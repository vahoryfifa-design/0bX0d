<footer>Обновлено: 3 декабря 2025 | Ваша подписка истекает 28 декабря 23:59:59</footer>

<script>
// Конец подписки — 28 декабря 2025 23:59:59 по МСК (+03:00)
const deadline = new Date("2025-12-28T23:59:59+03:00").getTime();

const timer = setInterval(() => {
  const now = new Date().getTime();
  const diff = deadline - now;

  if (diff <= 0) {
    clearInterval(timer);
    document.getElementById("timer").innerHTML = "ИСТЕКЛА";
    document.querySelector(".label").innerHTML = "Подписка закончилась";
    return;
  }

  const days    = Math.floor(diff / (1000*60*60*24));
  const hours   = Math.floor((diff % (1000*60*60*24)) / (1000*60*60));
  const minutes = Math.floor((diff % (1000*60*60)) / (1000*60));
  const seconds = Math.floor((diff % (1000*60)) / 1000);

  document.getElementById("timer").innerHTML = 
    `\( {days.toString().padStart(2,"0")} \){hours.toString().padStart(2,"0")} \( {minutes.toString().padStart(2,"0")} \){seconds.toString().padStart(2,"0")}`;
}, 1000);
</script>
